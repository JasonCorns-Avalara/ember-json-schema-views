{{#each propertyCollection as |propertyOptions|}}
  {{#if propertyOptions.childProperties}}
    {{#each-property properties=propertyOptions.childProperties document=propertyOptions.document as |childKey childProperty childType childOptions|}}
      {{yield (concat (concat propertyOptions.key '.') childKey) childProperty childType childOptions}}
    {{/each-property}}
  {{else}}
    {{yield propertyOptions.key propertyOptions.property propertyOptions.type propertyOptions}}
  {{/if}}
{{/each}}
